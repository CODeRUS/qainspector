{
  "app-id": "ru.omprussia.qainspector",
  "id": "ru.omprussia.qainspector",
  "branch": "stable",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.12",
  "sdk": "org.kde.Sdk",
  "command": "ru.omprussia.qainspector",
  "modules": [
    {
      "name": "qainspector",
      "buildsystem": "cmake-ninja",
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ],
  "finish-args": [
    "--socket=session-bus",
    "--socket=system-bus",
    "--share=network",
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--filesystem=host",
    "--device=dri"
  ]
}